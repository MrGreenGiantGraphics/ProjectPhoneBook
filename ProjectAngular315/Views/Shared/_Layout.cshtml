<!DOCTYPE html>
<html>
<head ng-app="myPhoneBook">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>
    @*top*@
    <h3>Enter New Contact</h3>
    <div ng-controller="userController" class="col-lg-8">
        <button class="btn btn-success" ng-show="!editMode" ng-click="phoneAddBtn()">
            <span class="glyphicon glyphicon-user"></span> create
        </button>
        <form class="form-horizontal jumbotron ">
            <div class="form-group">
                <label class="col-sm-2 control-label">First Name:</label>
                <div class="col-sm-10">
                    <input type="text" name="firstName" value="" ng-model="firstName" placeholder="First Name:" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Last Name:</label>
                <div class="col-sm-10">
                    <input type="text" name="lastName" value="" ng-model="lastName" placeholder="Last Name:" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Main Number:</label>
                <div class="col-sm-10">
                    <input type="text" name="phoneHome" value="" ng-model="phoneHome" placeholder="Main Number:" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Second Number:</label>
                <div class="col-sm-10">
                    <input type="text" name="phoneCell" value="" ng-model="phoneCell" placeholder="Alternative:" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Country:</label>
                <div class="col-sm-10">
                    <input type="text" name="country" value="" ng-model="country" placeholder="Country:" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">City:</label>
                <div class="col-sm-10">
                    <input type="text" name="city" value="" ng-model="city" placeholder="City:" />
                </div>
            </div>
        </form>
        <button class="btn btn-success" ng-show="editMode" ng-click="phoneSaveBtn()">
            <span class="glyphicon glyphicon-pencil"></span> update
        </button>
        <button class="btn btn-success" ng-show="editMode" ng-click="phoneCancelBtn()">
            <span class="glyphicon glyphicon-pencil"></span>cancel
        </button>
        <h3>Phone Book</h3>

        <table class="table table-striped caption jumbotron">
            <thead>
                <tr>
                    <th>Edit</th>
                    <th>First</th>
                    <th>Last</th>
                    <th>Main</th>
                    <th>Mobil</th>
                    <th>Country</th>
                    <th>City</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in phoneBook">
                    <td>
                        <button ng-click="phoneEditBtn($index)">
                            <span class="glyphicon glyphicon-pencil">
                            </span>&nbsp;&nbsp;Edit
                        </button>
                    </td>
                    <td>{{ item.firstName }}</td>
                    <td>{{ item.lastName }}</td>
                    <td>{{ item.phoneHome }}</td>
                    <td>{{ item.phoneCell }}</td>
                    <td>{{ item.country }}</td>
                    <td>{{ item.city }}</td>
                    <td>
                        <button ng-click="phoneDeleteBtn($index)">
                            <span class="glyphicon glyphicon-trash"></span>&nbsp;&nbsp;Delete
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="Scripts/angular.js"></script>
    <script src="app/_App.js"></script>
    <script src="app/Services/TodoServices.js"></script>
    <script src="app/Controllers/HomeController.js"></script>
</body>
</html>